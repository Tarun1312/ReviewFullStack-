@model List<Review>

<h1>Welcome to ReviewHub</h1>
<p>Share your reviews and explore others' thoughts!</p>

<h2>Categories</h2>
<div class="btn-group">
    <a href="/" class="btn btn-secondary">All Reviews</a>
    @foreach (var category in ViewBag.Categories)
    {
        <a href="/?category=@category" class="btn btn-secondary">@category</a>
    }
</div>

<h2>@(ViewBag.SelectedCategory ?? "Recent Reviews")</h2>
@if (!Model.Any())
{
    <p>No reviews available for this category.</p>
}
else
{
    <div class="list-group">
        @foreach (var review in Model)
        {
            <div class="list-group-item">
                <h4>Category: @review.Category</h4>
                <p>@review.Content</p>
                <p>Rating: @review.Rating/5</p>
                <small>Reviewed on: @review.CreatedAt.ToString("g")</small>
            </div>
        }
    </div>
}
